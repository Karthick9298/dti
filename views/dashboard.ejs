<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Isolation Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
        }
        .sidebar {
            width: 220px;
            height: 100vh;
            background-color: #1e1e2d;
            color: white;
            padding: 20px;
            position: fixed;
        }
        .sidebar h2 {
            font-size: 22px;
            margin-bottom: 30px;
        }
        .sidebar a {
            display: block;
            color: white;
            margin: 15px 0;
            text-decoration: none;
            font-size: 16px;
        }
        .main-content {
            margin-left: 240px;
            padding: 20px;
        }
        .header {
            background-color: white;
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .header h1 {
            font-size: 24px;
            margin: 0;
        }
        .charts {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }
        .chart-card {
            background-color: white;
            flex: 1;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .filters {
            margin: 20px 0;
            display: flex;
            gap: 15px;
        }
        .filters select, .filters input {
            padding: 8px;
            font-size: 14px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f8f9fa;
            font-weight: bold;
        }
        .status-success {
            color: green;
            font-weight: bold;
        }
        .status-failed {
            color: red;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h2>Dashboard</h2>
        <a href="#">Home</a>
        <a href="#">OTP Logs</a>
        <a href="#">Security Reports</a>
        <a href="#">Settings</a>
        <a href="#">Logout</a>
    </div>

    <div class="main-content">
        <div class="header">
            <h1>OTP Isolation Dashboard</h1>
        </div>

        <div class="charts">
            <div class="chart-card">
                <h3>Spam OTP Percentage</h3>
                <canvas id="spamChart"></canvas>
            </div>
            <div class="chart-card">
                <h3>Attack Type Analysis</h3>
                <canvas id="attackChart"></canvas>
            </div>
        </div>

        <div class="filters">
            <input type="text" placeholder="Search by User ID">
            <select>
                <option>Status: All</option>
                <option>Success</option>
                <option>Failed</option>
            </select>
            <input type="date">
            <input type="date">
        </div>

        <table>
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Phone Number</th>
                    <th>OTP</th>
                    <th>Status</th>
                    <th>Isolation Status</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>12345</td>
                    <td>+1 234 567 890</td>
                    <td>654321</td>
                    <td class="status-success">Success</td>
                    <td>Isolated</td>
                    <td>2025-04-28 10:30 AM</td>
                </tr>
                <tr>
                    <td>67890</td>
                    <td>+1 987 654 321</td>
                    <td>123456</td>
                    <td class="status-failed">Failed</td>
                    <td>Exposed</td>
                    <td>2025-04-28 10:45 AM</td>
                </tr>
            </tbody>
        </table>

    </div>

    <script>
        const spamChart = new Chart(document.getElementById('spamChart'), {
            type: 'bar',
            data: {
                labels: ['Normal OTP', 'Spam OTP'],
                datasets: [{
                    label: 'Percentage',
                    data: [85, 15],
                    backgroundColor: ['#4caf50', '#f44336']
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        const attackChart = new Chart(document.getElementById('attackChart'), {
            type: 'doughnut',
            data: {
                labels: ['Phishing', 'OTP Bombing', 'Tap Attack', 'Safe'],
                datasets: [{
                    label: 'Attack Types',
                    data: [20, 10, 5, 65],
                    backgroundColor: ['#ff9800', '#e91e63', '#9c27b0', '#4caf50']
                }]
            },
            options: {
                responsive: true
            }
        });
    </script>

</body>
</html>
